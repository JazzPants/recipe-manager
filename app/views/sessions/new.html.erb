<h1>Welcome to Recipe Manager.</h1>
<%= form_for @user, url: login_path, method: :post do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.submit "log in" %>
  Or <%= link_to(controller: 'users', action: 'new') { 'sign up' } %>
<% end %>

<h2><%= link_to "User Recipes", recipes_path%></h2>

<h2><%= link_to "Most Recent Recipe", recipes_recent_recipe_path %></h2>