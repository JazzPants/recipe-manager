<h1>New User Form</h1>
<%= form_for @user, controller: 'users', action: 'create' do |f| %>
  <%= f.label "Name:" %><br>
  <%= f.text_field :name %><br>
  <%= f.label "Password:" %><br>
  <%= f.password_field :password %><br>
  <%= f.label "Password Confirmation:" %><br>
  <%= f.password_field :password_confirmation %><br>
  <%= f.submit "Create" %>
<% end %>